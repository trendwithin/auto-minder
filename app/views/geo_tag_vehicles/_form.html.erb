
<article ng-app='vehicles' ng-controller='VehicleInputController'></article>
  <form action="">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1>Vechicle Description:</h1>
          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <label for="make">Make</label>
                <input type="text" class="form-control" name="make" value="Chevy">
              </div>
            </div>
            <div class="col-md-4">
              <label for="model">Celica</label>
              <input type="text" class="form-control" name="model" value="Celica">
            </div>
            <div class="col-md-4">
              <label for="color">Color</label>
              <input type="text" class="form-control" name="color" value="black">
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <label for="license_plate">License Plate Number</label>
              <input type="text" class="form-control" name="licence_plate" value="123XYZ">
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <h1>Additional Information</h1>
          <label for="additional_info">Added Comments:</label>
          <input type="text-area" class="form-control" name="additional_info" value="4 Tickets.  Intersection of 15th and Thomas">
          <div class="row">
            <div class="col-md-12">
              <span class="input-group-btn">
                <button class="btn btn-primary btn-lg" ng-click="submitVehicle">
                  Submit Info
                </button>
              </span>
            </div>
          </div>
        </div>
        <%# Hidden Fields For Geolocation %>
        <input type="hidden" name="latitude">
        <input type="hidden" name="longitude">

      </div>
    </div>
  </form>
</article>
